@model IEnumerable<AppLocationVehicleASP.Models.Mark>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.Id
            </td>
            <td>
                @item.Name
            </td>
            <td>
                <a asp-controller="Mark"
                   asp-action="Update"
                   asp-route-id="@item.Id">
                    Edit
                </a>|
                <a asp-controller="Mark"
                   asp-action="Details"
                   asp-route-id="@item.Id">
                    Details
                </a>|
                <a asp-controller="Mark"
                   asp-action="Delete"
                   asp-route-id="@item.Id"
                   class="delete-link">
                    Delete
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
